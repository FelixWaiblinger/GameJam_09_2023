.pauseMenu {
	justify-content: center;
	position: absolute;
	height: 100%;
	width: 100%;
	background-color: rgba(0, 0, 0, 0.8);
}

/***************************************
--------------- Upgrade Menu ---------
***************************************/

.upgradeMenu {
	align-self: center;
	justify-content: flex-start;
	background-color: var(--background-color);
	width: 90%;
	height: 90%;
	border-width: 0 10px;
	border-color: var(--border-color);
	border-radius: 5px;
}

.upgradeTooltip {
	background-color: #952619;
	border-width: 3px;
	border-color: white;
	border-radius: 5px;
	padding: 5px;
	margin-left: 65px;
	max-width: 300px;
}

.upgradeTooltip * {
	color: white;
}

.upgradeTooltip .title {
	font-size: var(--normal-font-size);
	-unity-font-style: bold;
	border-color: white;
	margin-bottom: 5px;
	white-space: normal;
}

.upgradeTooltip .text {
	font-size: var(--small-font-size);
	white-space: normal;
}


.upgradeTree Button {
	height: 60px;
	width: 60px;
	align-self: center;
	background-color: #351018;
	border-radius: 5px;
	margin: 10px;
	transition: 0.05s all;
}

.upgradeTree Button Image{
	height: 100%;
	width: 100%;
}

.upgradeTree Button.learned {
	border-width: 5px;
	border-color: #228B22;
}

.upgradeTree Button:hover {
	scale: 1.2;
	border-width: 5px;
	border-color: white;
	transition: 0.15s all;
}

.childContainer {
	flex-direction: row;
}


