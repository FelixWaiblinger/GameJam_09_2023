:root {
	--primary-color: white;
	--secondary-color: orange;
	--highlight-color: red;
	--border-color: white;
	--border-width: 2px;
	--background-color: rgba(0,0,0,0.5);

	--small-font-size: 14px;
	--normal-font-size: 18px;
	--big-font-size: 24px;
}

* {
	color: var(--primary-color);
	margin: 0;
	padding: 0;
	border-width: 0;

}


/*
Button:hover {
	color: var(--secondary-color);
