:root {
	--primary-color: #791616;
	--secondary-color: #241935;
	--third-color:#952619;
	--fourth-color: #351018;
	--highlight-color: #E88213;

	--border-color: var(--highlight-color);
	--border-width: 2px;
	--background-color: var(--primary-color);

	--color: var(--highlight-color);

	--small-font-size: 14px;
	--normal-font-size: 18px;
	--big-font-size: 24px;


	justify-content: center;
	align-items: center;
}

* {
	color: var(--primary-color);
	margin: 0;
	padding: 0;
	border-width: 0;

}

.unity-progress-bar__container {
	max-height: none;
	min-height: auto;
}

.screen {
	height: 100%;
	width: 100%;
	align-items: center;

}

.menuButtons {
	flex-direction: column;
	width: 250px;
	font-size: 18px;
	justify-content: space-between;
}

.menuButtons Button {
	color: var(--color);
	font-size: var(--big-font-size);
	-unity-font-style: bold;
	background-color: var(--background-color);
	height: 50px;
	margin: 10px;
	border-color: var(--border-color);
	border-width: 0px 5px;
	border-radius: 5px;
	transition: 0.15s all;
}

.menuButtons Button:hover {
	scale: 1.1;
	border-width: 0 8px;
	background-color: #952619;
	color: white;
	transition: 0.15s all;
}


/***************************************
---------------Main Menu ---------------
***************************************/

.mainMenu {
	justify-content: center;
	align-items: center;
	width: 350px;
	height: 100%;
	background-color: rgba(0, 0, 0, 0.9);
}

